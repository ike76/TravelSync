mixin navStranger
	nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
		a.navbar-brand(href='/') TripSync
		.collapse.navbar-collapse#nav01
			ul.navbar-nav.ml-auto
				li.nav-item
					form.form-inline.js-login(action='/auth/signin', method="POST")
						.form-group
							label.ml-4.text-white(for='emailInput') Email
								input.ml-2.form-control( type='email' id='emailInput' name='email')
							label.ml-4.text-white(for='passwordInput') Password
								input.ml-2.form-control( type='password' id='passwordInput' name='password')
							input.btn-success.mb-1.ml-2(type='submit', value='Login')



mixin navSignedIn
	nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
		
		a.navbar-brand(href='/') TripSync
		.collapse.navbar-collapse#nav01
			ul.navbar-nav.ml-auto
				li.nav-item
					a.nav-link(href='/auth/signout') Sign Out
				li.nav-idem
					p.nav-link(disabled) #{user.email}
